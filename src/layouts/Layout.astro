---
import "../styles/global.css";

interface Props {
	title: string;
	description?: string;
}

const { 
	title = "Hector Leal | Full-Stack Developer & ML Engineer",
	description = "Full-Stack Developer & ML Engineer building intelligent systems and scalable products."
} = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<title>{title}</title>
		
		<!-- Google Fonts: Inter -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">
	</head>
	<body class="bg-background text-white antialiased selection:bg-primary/30 selection:text-white">
		<slot />
	</body>
</html>
